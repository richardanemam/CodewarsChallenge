<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_challenges_name_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/challenges_item_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_challenges_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintStart_toStartOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_challenges_name_title"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/tv_item_challenges_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/challenges_item_description"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintEnd_toEndOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_challenges_name" />

            <TextView
                android:id="@+id/tv_item_challenges_desciption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="5"
                app:layout_constraintEnd_toEndOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintStart_toStartOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_challenges_description_title"
                tools:text="@tools:sample/full_names" />

            <Button
                android:id="@+id/btn_item_challenges_view_challenge_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:text="@string/challenges_view_challenges_details"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_challenges_desciption"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_item_challenges_name_title"
                app:layout_constraintStart_toStartOf="@+id/tv_item_challenges_name_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>